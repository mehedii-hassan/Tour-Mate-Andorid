<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tourmate">

    <application
        android:allowBackup="true"
        android:icon="@drawable/launch_icon1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/launch_icon1"
        android:supportsRtl="true"
        android:theme="@style/Theme.TourMate">
        <activity
            android:name="activities.ViewAllMomentsActivity"
            android:exported="false" />
        <activity
            android:name="activities.WeatherActivity"
            android:exported="false" />
        <activity
            android:name="activities.NearbyActivity"
            android:exported="false" />
        <activity
            android:name="activities.CameraActivity"
            android:exported="false" />
        <activity
            android:name="activities.ExpenseListActivity"
            android:exported="false" />
        <activity
            android:name="activities.EventDetailsActivity"
            android:exported="false" />
        <activity
            android:name="activities.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="activities.MainActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="activities.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="activities.LoginActivity"
            android:exported="false" />
    </application>

</manifest>